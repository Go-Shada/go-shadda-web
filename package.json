{
  "name": "campusthreads",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w services/api",
    "build:api": "npm run build -w services/api",
    "start:api": "npm run start -w services/api",
    "dev:web": "npm run dev -w apps/web",
    "build:web": "npm run build -w apps/web",
    "start:web": "npm run start -w apps/web",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  }
}
